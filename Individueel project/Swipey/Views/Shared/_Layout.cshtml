@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Swipey</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Swipey.styles.css" asp-append-version="true" />
</head>

<body style="background-color:#000814; color:wheat;">
    <header>
        <div style="display: flex; justify-content: center;">
            <img alt="SwipeyLogo" src="~/Photo//SwipeyLogo.png" width="100px" height="100px" />
            <a asp-controller="Settings" asp-action="Index"><img src="~/Photo/settings.png" alt="Swipey" width="35px" style="right:10px; position:absolute; top:10px;"></a>

        </div>
    </header>
    <div class="container">


            <div class="container mt-4">
                <div class="row">
                    <div class="col-12 col-lg-2">
                        <!-- First Column (Hidden on Mobile) -->
                        <div class="d-none d-lg-block">
                        </div>
                    </div>
                    <div class="col-12 col-lg-8">
                        <!-- Second Column (Always Visible) -->
                        <div>
                            @RenderBody()


                        </div>
                    </div>
                    <div class="col-12 col-lg-2">
                        <!-- Third Column (Hidden on Mobile) -->
                        <div class="d-none d-lg-block">
                        </div>
                    </div>
                </div>
            </div>


      

    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="bottom-nav">
            <div class="container">
                <ul class="icon-list">
                    <a><img src="~/Photo/chat.png" alt="Chat" width="35px"></a>
                    <a asp-controller="Home" asp-action="Index"><img src="~/Photo/SwipeyLogo-blackwhite.png" alt="Swipey" width="35px"></a>
                    <a asp-controller="User" asp-action="Index"><img src="~/Photo/UserIcon.png" alt="User" width="35px"></a>
                </ul>
            </div>
        </div>
    }
  

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
